<dx:ThemedWindow 
    x:Class="DevExTutorial.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:Views="clr-namespace:DevExTutorial.Views"
     xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon" 
 xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" 
 xmlns:sys="clr-namespace:System;assembly=mscorlib" 
 xmlns:dbase="http://schemas.devexpress.com/winfx/2008/xaml/demobase" 
 xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking" 
 xmlns:dxa="http://schemas.devexpress.com/winfx/2008/xaml/accordion"
 xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
 xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <dxdo:DockLayoutManager Grid.Row="1" FloatingMode="Desktop" ClosedPanelsBarVisibility="Never">
            <dxdo:LayoutGroup Orientation="Horizontal">

                <dxdo:LayoutPanel Name="Navigation" Caption="Variables" AllowClose="False" ItemWidth="auto">

                    <dxa:AccordionControl x:Name="accordion" Margin="6,6,0,6" HorizontalAlignment="Left"
              MinWidth="{Binding IsExpanded, RelativeSource={RelativeSource Self}, Converter={StaticResource accordionWidthConverter}}"
              dxlc:LayoutControl.AllowHorizontalSizing="False"
              AutoExpandAllItems="True"
              ChildrenPath="Content"
              ShowHeader="False"
              HeaderContent="{Binding SelectedRootItem.Header, RelativeSource={RelativeSource Self}}"
              HeaderGlyph="{Binding SelectedRootItem.Icon, RelativeSource={RelativeSource Self}}"
              HeaderGlyphSize="32,32"
              dxmvvm:UIRegion.Region="{x:Static common:Regions.Navigation}">

                        <dxa:AccordionControl.ItemContainerStyle>

                            <Style TargetType="dxa:AccordionItem">
                                <Style.Triggers>
                                    <Trigger Property="ItemLevel" Value="0">
                                        <Setter Property="Header" Value="{Binding Header}"/>
                                        <Setter Property="Glyph" Value="{Binding Icon}"/>
                                        <Setter Property="GlyphSize" Value="32,32"/>
                                    </Trigger>
                                    <Trigger Property="ItemLevel" Value="1">
                                        <Setter Property="ItemDisplayMode" Value="Header"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </dxa:AccordionControl.ItemContainerStyle>
                    </dxa:AccordionControl>

                </dxdo:LayoutPanel>


                <dxdo:DocumentGroup Name="Documents" 
                        DestroyOnClosingChildren="False"
                       dxmvvm:UIRegion.Region="{x:Static common:Regions.Documents}"
                        ClosePageButtonShowMode="NoWhere">
                    <dxdo:DocumentGroup.ItemStyle>
                        <Style TargetType="dxdo:LayoutPanel">
                            <Setter Property="Caption" Value="{Binding Caption}"/>
                            <Setter Property="IsActive" Value="{Binding IsActive, Mode=TwoWay}"/>
                            <Setter Property="ClosingBehavior" Value="ImmediatelyRemove"/>
                        </Style>
                    </dxdo:DocumentGroup.ItemStyle>
                </dxdo:DocumentGroup>



            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
    </Grid>
</dx:ThemedWindow>
